{
  "name": "room-assistant",
  "version": "2.1.1",
  "description": "Presence tracking and more for automation on the room-level",
  "author": "Heiko Rothe <me@heikorothe.com> (https://heikorothe.com)",
  "license": "MIT",
  "repository": "github:mKeRix/room-assistant",
  "keywords": [
    "smart home",
    "home automation",
    "home assistant",
    "presence",
    "bluetooth",
    "thermopile"
  ],
  "homepage": "https://www.room-assistant.io",
  "bugs": "https://github.com/mKeRix/room-assistant/issues",
  "bin": "./bin/room-assistant.js",
  "main": "dist/src/main.js",
  "types": "dist/src/main.d.ts",
  "files": [
    "dist/**/*.{js,ts}",
    "bin/*.js"
  ],
  "scripts": {
    "prepack": "npm run build",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.8",
    "@nestjs/core": "^6.11.8",
    "@nestjs/platform-express": "^6.11.8",
    "@nestjs/schedule": "^0.1.1",
    "async-mqtt": "^2.4.2",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "config": "^3.2.4",
    "democracy": "^3.1.3",
    "js-yaml": "^3.13.1",
    "kalmanjs": "^1.1.0",
    "lodash": "^4.17.15",
    "mathjs": "^6.5.0",
    "nest-emitter": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "slugify": "^1.3.6",
    "systeminformation": "^4.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.1",
    "@types/i2c-bus": "^1.0.27",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.149",
    "@types/mathjs": "^6.0.3",
    "@types/mdns": "0.0.33",
    "@types/noble": "0.0.39",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "@vuepress/plugin-pwa": "^1.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3",
    "vuepress": "^1.3.0",
    "vuepress-plugin-seo": "^0.1.2",
    "vuepress-plugin-sitemap": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"src/**/*.ts\" --pattern \"test/**/*.ts\" --pattern \"bin/*.js\"",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./env.ts"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "optionalDependencies": {
    "@abandonware/noble": "^1.9.2-5",
    "i2c-bus": "^5.1.0",
    "mdns": "^2.5.1",
    "onoff": "^5.0.1"
  },
  "engines": {
    "node": ">= 10 < 13"
  }
}
